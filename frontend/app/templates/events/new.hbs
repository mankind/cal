<div class="container">
  <div class="row ">
    <form {{action 'addEvent' model on='submit'}} class="form-inline" role=form>

      {{input value=model.description id="description" placeholder="Enter event description" class="form-control" required=true}}

      {{input id="event-finish" type='date' class="form-control" value=model.start placeholder="Enter a start event date"}}

      {{input id="event" type='date' class="form-control" value=model.finish placeholder="Enter event finish date"}}
    
      <button type='submit' class="btn btn-primary btn-default"> Submit </button>

      <button {{action 'cancel' model}}  class="btn btn-danger btn-default"> Cancel</button>  

    </form>
  </div> <!-- closes ./ row -->
</div>  <!-- closes ./container -->

{{outlet}}

